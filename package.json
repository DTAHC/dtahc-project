{
  "name": "dtahc-project",
  "version": "1.0.0",
  "description": "Plateforme de gestion des dossiers d'autorisations de travaux",
  "private": true,
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npx turbo run build",
    "dev": "npx turbo run dev",
    "dev:backend": "npx turbo run dev --filter=backend",
    "dev:frontend": "npx turbo run dev --filter=frontend",
    "dev:all": "npx turbo run dev",
    "lint": "npx turbo run lint",
    "typecheck": "npx turbo run typecheck",
    "test": "npx turbo run test",
    "docker:up": "cd docker && docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "cd docker && docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "cd docker && docker-compose -f docker-compose.dev.yml logs -f",
    "db:generate": "npm run db:generate --workspace=backend",
    "db:push": "npm run db:push --workspace=backend",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:seed": "npm run db:seed --workspace=backend",
    "db:studio": "npm run db:studio --workspace=backend",
    "legacy:start": "node index.js",
    "legacy:dev": "nodemon index.js",
    "legacy:socket": "node socket-server.js",
    "legacy:socket:dev": "nodemon socket-server.js",
    "legacy:optimize": "node scripts/optimize-db.js",
    "legacy:cron": "node scripts/cron-jobs.js",
    "migrate:data": "node scripts/migrate-data.js",
    "check:env": "node scripts/check-env.js",
    "clean": "npx turbo run clean && rm -rf node_modules"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.0.4",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.14.0",
    "redis": "^4.6.11",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "turbo": "^2.5.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "author": "DTAHC Team",
  "license": "UNLICENSED"
}

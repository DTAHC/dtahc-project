{
  "name": "dtahc-project",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd packages/backend && npm run db:generate",
    "db:push": "cd packages/backend && npm run db:push",
    "db:seed": "cd packages/backend && npm run db:seed",
    "check:env": "node scripts/check-env.js",
    "migrate:data": "node scripts/migrate-data.js",
    "prepare": "husky install",
    "docker:up": "cd docker && docker-compose up -d",
    "docker:down": "cd docker && docker-compose down",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "chalk": "^4.1.2",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^3.0.0",
    "turbo": "^1.13.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@8.19.2",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  }
}

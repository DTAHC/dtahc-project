# Variables d'environnement pour DTAHC
NODE_ENV=development
PORT=3000

# MongoDB
MONGO_URI=mongodb://localhost:27017/dtahc
MONGO_USERNAME=root
MONGO_PASSWORD=password
MONGO_DATABASE=dtahc

# Redis
REDIS_URI=redis://localhost:6379

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Email
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=no-reply@dtahc.fr
EMAIL_PASS=your_password
EMAIL_FROM=DTAHC <no-reply@dtahc.fr>

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log